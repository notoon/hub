{
  "name": "seedstack-hub",
  "version": "0.1.0",
  "description": "Seedstack components repository",
  "author": "SeedStack",
  "devDependencies": {
    "bower": "^1.7.9",
    "concurrently": "^2.1.0",
    "grunt": "^1.0.1",
    "grunt-w20": "^0.1.1",
    "jasmine-core": "~2.4.1",
    "karma": "~0.13",
    "karma-coverage": "~0.2",
    "karma-jasmine": "~0.3.1",
    "karma-phantomjs-launcher": "~0.1",
    "karma-phantomjs-shim": "~1.2.0",
    "karma-requirejs": "~0.2",
    "karma-typescript-preprocessor": "~0.0.21",
    "less": "^2.7.1",
    "phantomjs-polyfill": "0.0.1",
    "requirejs": "~2.1",
    "typescript": "^1.7.5",
    "typings": "^1.0.4",
    "cpx": "^1.3.1",
    "rimraf": "^2.5.2",
    "npm-run-all": "^2.1.1",
    "mkdirp": "^0.5.1"
  },
  "scripts": {
    "clean": "rimraf work/* dist/*",
    "create-dirs": "mkdirp work dist",
    "bower": "bower install --config.directory=work/bower_components",
    "typings": "typings install --global",
    "copy-sources": "cpx \"src/**\" work",
    "prepare": "run-p bower typings copy-sources",
    "compile-ts": "tsc -p work || true",
    "compile-less": "lessc work/hub/style/style.less work/hub/style/style.css",
    "compile": "run-p compile-ts compile-less",
    "optimize": "grunt w20:optimize",
    "copy-resources": "cpx \"work/{hub.min.js,hub/**,bower_components/font-awesome/**,bower_components/w20/**,bower_components/w20-material/**,bower_components/tv4/**}\" dist",
    "dist": "run-s optimize copy-resources",
    "build": "run-s create-dirs clean prepare compile dist",
    "dev": "run-s copy-sources compile"
  }
}
